[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    build,
    dist,
    *.egg-info
extend-ignore =
    # Black compatibility
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    # Django-specific
    DJ01,  # Avoid using null=True on string-based fields
per-file-ignores =
    __init__.py:F401
    */settings/*.py:F405,F403
max-complexity = 10

# ==============================================================================
# Django TODO Application - Environment Variables Template
# ==============================================================================
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ------------------------------------------------------------------------------
# These settings configure the PostgreSQL database connection

# Database name
# Default: todo_db
POSTGRES_DB=todo_db

# Database username
# Default: todo_user
POSTGRES_USER=todo_user

# Database password
# SECURITY: Change this in production! Use a strong, random password
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=todo_password

# Database host
# For Docker: use 'db' (service name from docker-compose.yml)
# For local development: use 'localhost' or '127.0.0.1'
POSTGRES_HOST=db

# Database port
# Default PostgreSQL port: 5432
POSTGRES_PORT=5432

# ------------------------------------------------------------------------------
# Django Configuration
# ------------------------------------------------------------------------------

# Django Secret Key
# SECURITY: MUST be changed in production!
# Generate a secure key with:
#   python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# Or online: https://djecrety.ir/
DJANGO_SECRET_KEY=django-insecure-change-this-in-production

# Debug Mode
# SECURITY: MUST be False in production!
# Development: True
# Production: False
DEBUG=True

# ------------------------------------------------------------------------------
# Optional: Additional Django Settings
# ------------------------------------------------------------------------------

# Allowed Hosts (comma-separated)
# Development: * (allows all hosts)
# Production: your-domain.com,www.your-domain.com
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Email Configuration (for password reset, notifications, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Time Zone
# Default: UTC
# Options: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# TIMEZONE=UTC

# Language Code
# Default: en-us
# LANGUAGE_CODE=en-us

# ------------------------------------------------------------------------------
# Optional: Production Settings
# ------------------------------------------------------------------------------

# Static Files (uncomment for production)
# STATIC_ROOT=/var/www/static/
# MEDIA_ROOT=/var/www/media/

# HTTPS/SSL Settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ------------------------------------------------------------------------------
# Optional: External Services
# ------------------------------------------------------------------------------

# Redis (for caching, sessions, or Celery)
# REDIS_URL=redis://redis:6379/0

# AWS S3 (for static/media files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ------------------------------------------------------------------------------
# Notes
# ------------------------------------------------------------------------------
# 1. Never commit .env to version control (it's in .gitignore)
# 2. Keep .env.example in version control as a template
# 3. Update .env.example when adding new environment variables
# 4. Use strong, unique passwords for production
# 5. Rotate secrets regularly in production
# ------------------------------------------------------------------------------
